<div class="header">
  <h1>Dashboard Controller</h1>
  <h2  class="mt-2 text-center">Welcome: <%= Current.user.login%> </h2>
</div>

<div class="sidebar">
  <h3 class="text-center">Disabled Apps</h3>
    <% @disabled_appications.each do |disabled_app| %>
      <ul class="list-group">
        <%= link_to disabled_app.name, add_app_path(disabled_app.id), class: "list-group-item" %> 
      </ul>
    <%- end %>
  <p class="mt-4 text-muted">Click on the application that you want to add to your main dashboard</p>
</div>

<div class="content">
  <h3>Active apps</h3>
  <div class="card-grid">
    <div data-controller="drag" data-drag-url="/dashboard/:id/move">
        <% @user_active_apps.each do |application|%>
          <div data-id="<%= application.id %>"class="card grid-square">
            <div class="card-body">
              <div class="card-title">
                <h3 class="d-inline"><%= application.name%></h3>
                  <%= link_to delete_app_path(application.id) do %>
                    <span class="d-inline">&#10060;</span>
                  <% end %>
              </div>
              <p class="card-text"><%= application.description %></p>
            </div> <!-- End Card Body -->
            <div class="card-footer">
                <%= link_to "Launch", application.link, class: "btn btn-primary" %>
            </div> <!-- End Card Footer -->
          </div>
        <% end %>
    </div> <!-- End Data Controller -->
  </div> <!--End End Card Grid -->
</div> <!--End Content Div -->

  
  


