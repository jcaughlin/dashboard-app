<% if flash[:notice] %>
<div class="flash">
  <div class="alert alert-info mt-4" role="alert">
    <p class="fw-bold text-center">
      <%= flash[:notice] %>
    </p>
  </div>
  </div>
<% end %>

<% if flash[:alert] %>
<div class="flash">
  <div class="alert alert-warning mt-4" role="alert">
    <p class="fw-bold text-center">
      <%= flash[:alert] %>
    </p>
  </div>
  </div>
<% end %>